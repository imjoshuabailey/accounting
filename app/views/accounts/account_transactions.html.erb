<table>
	<h1>
		<%= @account.user.name %>
	</h1>
<h3>Current Balance: <%= number_to_currency(Transaction.balance(@transactions)) %></h3>
  <thead>

    <tr>
			<th>Description</th>
      <th>Credit</th>
      <th>Debit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.credit) %></td>
        <td><%= number_to_currency(transaction.debit) %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
	</tbody>
</table>
<br>



