<p id="notice"><%= notice %></p>

<h2>
  <strong>Account Number:</strong>
  <%= @account.number %>
</h2>

<h3>
	<strong>Current Balance:</strong>
	<%= number_to_currency(@transactions.balance) %>
</h3>

<div class="transactions">
	<h1>Transactions</h1>
	<table>

  	<thead>

    	<tr>
				<th>Description</th>
      	<th>Credit</th>
      	<th>Debit</th>
      	<th colspan="3"></th>
    	</tr>
  	</thead>

  	<tbody>
    	<% @transactions.each do |transaction| %>
      	<tr>
        	<td><%= transaction.description %></td>
        	<td><%= number_to_currency(transaction.credit) %></td>
        	<td><%= number_to_currency(transaction.debit) %></td>
					<td><%= link_to 'Show', account_transaction_path(@account, transaction)%></td>
	        <td><%= link_to 'Edit', edit_account_transaction_path(@account, transaction) %></td>
	        <td><%= link_to 'Destroy', account_transaction_path(@account, transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>


      	</tr>
    	<% end %>
		</tbody>
	</table>

<%= render 'transactions/form', transaction: Transaction.new %>

	<br>
	<%= link_to 'New Transaction', new_account_transaction_path(account_id: params[:id]) %>
</div>
<br>

<%= link_to 'Accounts', accounts_path %>
