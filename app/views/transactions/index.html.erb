<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
<h2>Balance: <%= number_to_currency(Transaction.balance(@transactions)) %></h2>
  <thead>
    <tr>
      <th>Account</th>
			<th>Description</th>
      <th>Credit</th>
      <th>Debit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.account.number %></td>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.credit) %></td>
        <td><%= number_to_currency(transaction.debit) %></td>
        <td><%= link_to 'Show', account_transaction_path(id: transaction.id) %></td>
        <td><%= link_to 'Edit', edit_account_transaction_path(id: transaction.id) %></td>
        <td><%= link_to 'Destroy', account_transaction_path(id: transaction.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

